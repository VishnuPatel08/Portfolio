{
  "name": "portfolio-website",
  "version": "1.0.0",
  "description": "A modern, responsive portfolio website with beautiful UI/UX",
  "main": "index.html",
  "scripts": {
    "start": "live-server --port=3000",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o css/style.min.css css/style.css",
    "minify-js": "uglifyjs js/script.js -o js/script.min.js",
    "serve": "python -m http.server 8000",
    "dev": "live-server --port=3000 --watch=css,js,images"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "live-server": "^1.2.2",
    "uglify-js": "^3.17.4"
  },
  "keywords": [
    "portfolio",
    "website",
    "responsive",
    "html",
    "css",
    "javascript",
    "modern",
    "ui",
    "ux"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/portfolio"
  },
  "bugs": {
    "url": "https://github.com/yourusername/portfolio/issues"
  },
  "homepage": "https://yourusername.github.io/portfolio"
}